<div class="container">
  <div class="col-md-4 col-md-offset-4">
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <%= form_for(@game, :html => { class: "form-horizontal", role: "form" }) do |f| %>
          <div class="form-group">
            <div class="col-md-12">
              <%= f.text_field :name, class: "form-control form-home-sign", placeholder: "#{t(:developer_name)}" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-12 form-email-fix-position">
              <%= f.text_area :description, class: "form-control form-home-sign", placeholder: "#{t(:developer_description)}" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-12">
              <%= f.text_field :website, class: "form-control form-home-sign", placeholder: "#{t(:developer_website)}" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-12 col-sm-12 col-xs-12 form-birthday-fix-position">
              <h4>
                <%= t(:year_founded) %>
              </h4>
              <div class="select-date-wrapper">
                <%= date_select :game, :release, { start_year: 2017, end_year: 1905, order: [:day, :month, :year]}, class: "form-control select-date"  %>
              </div>

            </div>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-md-offset-2 col-md-8">
                <%= f.collection_check_boxes :developer_ids,
                                              Developer.all, :id, :name do |cb| %>
                <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
                <% end %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="center col-md-12 col-sm-12 col-xs-12 form-create">
              <%= f.submit(@game.new_record? ? t(:create_developer_page) : t(:update_developer_page),
                                class: "btn btn-purple btn-lg") %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
