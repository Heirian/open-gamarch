<%= render 'shared/page_title', page_title: 'Developers' %>
<hr />

  <div class="container">
    <div class="row">
      <% @developers.each do |developer| %>
        <div align="center">
          <ul class="listing">
            <div class="col-md-3 user-index">
              <li class="user-name">
                <%= link_to developer.name, developer_path(developer) %>
              </li>
              <li>
                <%= truncate(developer.description, length: 50) %>
              </li>
              <% if logged_in? && current_user.admin? %>
                <li>
                  <%= link_to "Delete this developer", developer_path(developer), method: :delete,
                  data: {confirm: "Are you sure you want to delete the developer and all associated games?"}, class: 'btn btn-purple' %>
                </li>
              <% end %>
            </div>
          </ul>
        </div>
      <% end %>
    </div>
