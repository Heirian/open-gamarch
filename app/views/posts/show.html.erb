
<% provide(:title, @post.name ) %>
<div class="row">
  <div class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
    <div class="col-md-2 col-sm-3 col-xs-12">
      <%= link_to gravatar_for(@post.user, size: 100, class: 'article-avatar article-avatar-second-border'), about_path %>
    </div>
    <div class="inline article-user-name">
        <%= link_to @post.user.name.capitalize, about_path %>
    </div>
    <div class="inline">
      <% if logged_in? %>
        <% if current_user == @post.user %>
          <%= link_to 'Edit Profile', edit_user_path(@post.user), class: 'btn btn-purple' %>
        <% else %>
          <%= render 'users/follow_form' if logged_in? %>
        <% end %>
      <% elsif @user.id == 3 %>
        <%= link_to 'About', about_path, class: 'btn btn-purple' %>
      <% else %>
        <%= link_to 'Log in or Sign up', root_path, class: 'btn btn-purple' %>
      <% end %>
    </div>
    <div>
      <div class="biografy-show"><%= @post.user.bio %></div>
      <small>
        <%= @post.timestamp %>
        | <%= @post.reading_time %> min read
      </small>
    </div>
  </div>
</div>

<hr />



<div class="row">

  <div class="justify col-xs-12 col-xs-offset-0 col-sm-12 col-sm-offset-0 col-md-10 col-md-offset-1 article-show">
    <div class="col-md-12 col-xs-12 col-sm-12">
      <%= render 'shared/page_title', page_title: @post.name, class: 'article-show' %>
    </div>

    <div align="center">
      <%= image_tag(@post.image.url, class: "img-ratio") if @post.image? %>
    </div>
    <hr />
    <div class="article-show-content">
      <%= simple_format(@post.description) %>
    </div>
    <hr />
    <div class="btn-group btn-article-show-adjust">
      <% if logged_in? %>
        <%= link_to "Create a new post", new_post_path, class: "btn btn-purple" %>
      <% end %>
      <%= link_to "Seek new posts", posts_path, class: "btn btn-purple" %>
      <% if logged_in? && (current_user == @post.user || current_user.admin?) %>
        <%= link_to "Edit", edit_post_path(@post), class: "btn btn-purple" %>
        <%= link_to "Delete", post_path(@post), method: :delete,
                                                                data: { confirm: "#{current_user.name}, are you sure you want to delete this post?" },
                                                                class: "btn btn-purple" %>
      <% end %>
    </div>
  </div>
</div>

<hr />

<section>
    <div class="center home-user-name">
      <%= link_to 'Featured', @user %>
      <div class="row">
        <div class="col-xs-12 col-xs-offset-0 col-sm-12 col-sm-offset-0 col-md-10 col-md-offset-1 article-content home-cover">
          <% @random_posts.each do |random_post| %>
            <div class="col-md-4 col-sm-12 col-xs-12">
              <div class="article-content home-cover">
                <%= image_tag(random_post.image.url, class: "img-cover-ratio") if random_post.image? %>
                <%= link_to random_post.name, post_path(random_post) %>
                <%= random_post.make_safe(251) %>
              </div>
            </div>
          <% end %>
        </div>

      </div>
    </div>
</section>

<section>
  <div class="article-content col-xs-12 col-xs-offset-0 col-sm-12 col-sm-offset-0 col-md-10 col-md-offset-1">
    <div id="disqus_thread"></div>
