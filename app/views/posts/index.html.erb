<div class="row">
  <div class="col-md-12">
    <h1 class="blog-name">
      <%= link_to "/Blog", blog_path %>
    </h1>
  </div>
</div>

<hr />
<div class="album">
  <div class="container">
    <div class="col-md-12">
      <% @posts.each do |post| %>
        <div class="col-md-4 card justify post-index">
          <%= image_tag(post.image.url, class: "img-cover-ratio") if post.image? %>
          <h4 class="post-index-title">
            <%= link_to truncate(post.name, length: 30, class:"justify"), post_path(post) %>
          </h4>
          <p>
            <%= post.make_safe(255) %>
          </p>
          <p>
            <span class="quiet">
              <small><%= time_ago_in_words(post.created_at) %> ago
                | <%= post.reading_time %> min read
              </small>
            </span>
          </p>
          <hr />
          <div class="avatar-post-index">
            <%= link_to gravatar_for(post.user, size: 50), user_path(post.user) %>
            <div class="avatar-post-index-text">
              <%= link_to post.user.name.capitalize, user_path(post.user), class: "avatar-post-index-font" %>
              <%= pluralize(post.user.posts.count, "post") %>
            </div>
          </div>
          <% if logged_in? && (current_user == post.user || current_user.admin?) %>
            <div class="btn-group">
              <%= link_to "Edit", edit_post_path(post), class: "btn btn-purple" %>
              <%= link_to "Delete", post_path(post), method: :delete,
                                                                      data: { confirm: "#{current_user.name}, are you sure you want to delete this post?" },
                                                                      class: "btn btn-purple" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div align="center">
  <%= will_paginate %>
</div>
