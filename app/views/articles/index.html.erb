
<hr />
<div class="row">
  <% @articles.each do |article| %>
    <div class="col-md-3 justify article-index">
      <%= image_tag(article.image.url, class: "img-ratio") if article.image? %>
      <h4 class="article-index-title"><%= link_to truncate(article.name, length: 30, class:"justify"), article_path(article) %></h4>
      <p><%= truncate(article.description, length: 150, class:"justify") %></p>
      <p>
        <span class="quiet">
          <small><%= time_ago_in_words(article.created_at) %> ago
            | <%= pluralize(article.comments.count, "comment") %>
          </small>
        </span>
      </p>
      <hr />
      <div class="avatar-article-index">
        <%= link_to gravatar_for(article.user, size: 50), user_path(article.user) %>
        <%= link_to article.user.name.capitalize, user_path(article.user), class: "avatar-article-index-font" %>
      </div>
      <% if logged_in? && (current_user == article.user || current_user.admin?) %>
        <div class="btn-group">
          <%= link_to "Edit this article", edit_article_path(article), class: "btn btn-purple" %>
          <%= link_to "Delete this article", article_path(article), method: :delete,
                                                                  data: { confirm: "Are you sure?" },
                                                                  class: "btn btn-purple" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<div align="center">
  <%= will_paginate %>
</div>
