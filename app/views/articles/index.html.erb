<%= render 'shared/page_title', title: 'Listing all articles' %>

<% @articles.each do |article| %>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 col-sm-3 col-sm-offset-0 col-md-2 col-md-offset-0">
      <section class="center">
        <%= link_to gravatar_for(article.user, size: 137), user_path(article.user) %>
      </section>
    </div>
    <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-0 col-md-8 col-md-offset-0 well">
      <h4><%= link_to article.name, article_path(article) %></h4>
      <p><%= truncate(article.description, length: 500) %></p>
      <p>
        <span class="quiet">
          <small>Created <%= time_ago_in_words(article.created_at) %> ago by <%= article.user.name.capitalize %></small>
        </span>
      </p>
      <% if logged_in? && (current_user == article.user || current_user.admin?) %>
        <%= link_to "Edit this article", edit_article_path(article), class: "btn btn-purple" %>
        <%= link_to "Delete this article", article_path(article), method: :delete,
                                                                data: { confirm: "Are you sure?" },
                                                                class: "btn btn-purple" %>
      <% end %>
    </div>
  </div>
<% end %>

<div align="center">
  <%= will_paginate %>
</div>
