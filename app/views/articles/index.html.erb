<%= render 'shared/page_title', title: 'Listing all articles' %>

<div class="row">
  <% @articles.each do |article| %>
    <div class="well col-md-3 justify">
      <%= image_tag(article.image.url, class: "img-ratio") if article.image? %>
      <h4><%= link_to truncate(article.name, length: 30, class:"justify"), article_path(article) %></h4>
      <p><%= truncate(article.description, length: 150, class:"justify") %></p>
      <p>
        <span class="quiet">
          <small>Created <%= time_ago_in_words(article.created_at) %> ago by <%= article.user.name.capitalize %>
            | <%= pluralize(article.comments.count, "comment") %>
          </small>
        </span>
      </p>
      <%= link_to gravatar_for(article.user, size: 50), user_path(article.user) %>
      <hr />
      <% if logged_in? && (current_user == article.user || current_user.admin?) %>
        <div class="btn-group">
          <%= link_to "Edit this article", edit_article_path(article), class: "btn btn-purple" %>
          <%= link_to "Delete this article", article_path(article), method: :delete,
                                                                  data: { confirm: "Are you sure?" },
                                                                  class: "btn btn-purple" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<div align="center">
  <%= will_paginate %>
</div>
