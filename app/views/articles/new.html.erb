<%= render 'shared/ckeditor' %>
<% if current_user.articles.empty? %>
  <%= render 'shared/page_title', page_title: "Welcome to your first mission, #{current_user.name.capitalize}. Spread your knowledge with the community" %>
<% elsif current_user.articles.count < 10 %>
  <%= render 'shared/page_title', page_title: "You're doing well, young padawan, make a new article" %>
<% else %>
  <%= render 'shared/page_title', page_title: 'A new awesome article' %>
<% end %>

<%= render 'shared/errors', object: @article %>

<%= render 'form', object: @article %>
