
<%= render 'shared/ckeditor' %>


<% if current_user.articles.empty? %>
  <%= render 'shared/page_title', page_title: "#{t(:welcome_to_mission)}, #{current_user.name.capitalize}. #{t(:spread_your_knowledge)}" %>
<% elsif current_user.articles.count < 10 %>
  <%= render 'shared/page_title', page_title: t(:young_padawan_article) %>
<% else %>
  <%= render 'shared/page_title', page_title: t(:new_awesome_article) %>
<% end %>

<%= render 'shared/errors', object: @article %>

<%= render 'form', object: @article %>
