<%= render 'shared/page_title', title: @article.name %>

<div class="row">
  <div class="justify col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1">
    <hr />
    <div align="center">
      <%= image_tag(@article.image.url, class: "img-ratio") if @article.image? %>
    </div>
    <hr />
    <%= simple_format(@article.description) %>
    <hr />
    <div class="btn-group">
      <%= link_to "Return to articles listing", articles_path, class: "btn btn-purple" %>
      <% if logged_in? %>
        <%= link_to "Create a new article", new_article_path, class: "btn btn-purple" %>
      <% end %>
      <% if logged_in? && (current_user == @article.user || current_user.admin?) %>
        <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-purple" %>
        <%= link_to "Delete this article", article_path(@article), method: :delete,
                                                                data: { confirm: "Are you sure?" },
                                                                class: "btn btn-purple" %>
      <% end %>
    </div>
    <div class="pull-right">
      <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
      <small>
        <div class="separator">
          Created <%= time_ago_in_words(@article.created_at) %> ago by <%= @article.user.name.capitalize %>
        </div>
      </small>
    </div>
  </div>
</div>

<hr />

<% if logged_in? %>
  <div class="row">
    <div class="col-md-12">
      <%= form_for([@article, @comment], remote: true, :html => { class: "form-horizontal", role: "form" }) do |f| %>
        <div>
          <div class="input-group input-group-lg col-md-10 col-md-offset-1">
            <%= link_to gravatar_for(current_user, size: 50), user_path(current_user), class:"input-group-addon" %>
            <%= f.text_field :description, class: "form-control comment-form", placeholder: "Write a comment..." %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <h4 class="center">Have a account? <%= link_to "Log in to comment", login_path %></h4>
  <h4 class="center">Are you new here? <%= link_to "Sign up", signup_path %></h4>
<% end %>
<br>

<% if @article.comments.any? %>
  <div class="real-time-messages">
    <%= render partial: 'comments/comments', object: @comments %>
  </div>
<% else %>
  <div class="real-time-messages">
  </div>
<% end %>
