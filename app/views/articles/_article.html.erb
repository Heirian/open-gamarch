<li id="article-<%= article.id %>" class="justify">
  <%= link_to gravatar_for(article.user, size: 50, class: 'gravatar-feed'), article.user %>
  <span class="user"><%= link_to article.user.name, article.user %></span>
  <span class="timestamp">
    <%= time_ago_in_words(article.created_at) %> ago.
  </span>
  <div>
    <%= link_to article.name, article_path(article) %>
  </div>
  <div><%= truncate(article.description, length: 500) %></div>

</li>
<br>
