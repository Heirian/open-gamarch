<% provide(:title, "Log in or Sign up") %>
<%= render 'shared/page_title', page_title: 'Log in' %>

<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <%= form_for(:session, :html => { class: "form-horizontal", role: "form" }, url: login_path) do |f| %>
      <div class="form-group">
        <div class="col-md-offset-4 col-md-4 col-sm-12 col-xs-12">
          <%= f.text_field :email, class: "form-control", placeholder: "Enter your email" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-4 col-md-4 col-sm-12 col-xs-12">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-4 col-md-4 col-sm-6 col-xs-6">
          <%= f.submit "Log in", class: "btn btn-purple btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
