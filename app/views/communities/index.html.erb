<%= render 'shared/page_title', page_title: 'Communities' %>
<hr />

  <div class="container">
    <div class="row">
      <% @communities.each do |community| %>
        <div align="center">
          <ul class="listing">
            <div class="col-md-3 user-index">
              <li class="user-name">
                <%= link_to community.name, community_path(community) %>
              </li>
              <li>
                <%= truncate(community.description, length: 50) %>
              </li>
              <li>
              
              </li>
              <% if logged_in? && current_user.admin? %>
                <li>
                  <%= link_to "Delete this community", community_path(community), method: :delete,
                  data: {confirm: "Are you sure you want to delete the community?"}, class: 'btn btn-purple' %>
                </li>
              <% end %>
            </div>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
