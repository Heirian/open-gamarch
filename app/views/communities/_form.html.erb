<div class="container">
  <div class="col-md-4 col-md-offset-4">
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <%= form_for(@community, :html => { class: "form-horizontal", role: "form" }) do |f| %>
          <div class="form-group">
            <div class="col-md-12">
              <%= f.text_field :name, class: "form-control form-home-sign", placeholder: "#{t(:community_name)}" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-12 form-email-fix-position">
              <%= f.text_area :description, class: "form-control form-home-sign", placeholder: "#{t(:community_description)}" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-12">
              <%= f.text_field :website, class: "form-control form-home-sign", placeholder: "#{t(:community_website)}" %>
            </div>
          </div>

          <div class="form-group">

              <div class="col-md-12">
                <%= f.collection_select :game_id, Game.all, :id, :name, {}, {:class=>"form-control form-home-sign"} %>
              </div>

          </div>

          <div class="form-group">
            <div class="center col-md-12 col-sm-12 col-xs-12 form-create">
              <%= f.submit(@community.new_record? ? t(:create_community_page) : t(:update_community_page),
                                class: "btn btn-purple btn-lg") %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
