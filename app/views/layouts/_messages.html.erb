<% flash.each do |name, message| %>
  <div class="col-md-10 col-md-offset-1">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="alert alert-<%= name %>">
          <a href="#" class="close" data-dismiss="alert">&#215</a>
          <%= message %>
        </div>
      </div>
    </div>
  </div>
<% end %>
