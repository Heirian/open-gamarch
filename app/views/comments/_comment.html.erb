<div class="row">
  <div class="col-md-10 col-md-offset-1 well">
    <div class="row">
      <div class="col-md-2">
        <%= link_to gravatar_for(comment.user, size: 80), user_path(comment.user) %>
      </div>
      <div class="col-md-8">
        <p>
          <%= comment.description %>
        </p>
        <p>
          <span class="quiet">
            <small>
              Created <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.user.name %>
            </small>
          </span>
        </p>
        <% if logged_in? && (current_user == comment.user || current_user.admin? || current_user == comment.article.user) %>
          <%= link_to "Delete this comment", article_comment_path(@article, comment), method: :delete,
                                                                  data: { confirm: "Are you sure?" },
                                                                  class: "btn btn-purple" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
