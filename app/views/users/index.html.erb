<%= render 'shared/page_title', title: 'Showing all users' %>

<div class="row">
  <div class="container">
    <div align="center">
      <% @users.each do |user| %>
      <ul class="listing">
        <div class="well col-md-2 col-md-offset-1">
          <li>
            <%= link_to gravatar_for(user), user_path(user) %>
          </li>
          <li class="user-title">
            <%= link_to user.name.capitalize, user_path(user) %>
          </li>
          <li>
            <small>
              <%= pluralize(user.articles.count, "article") if user.articles %>
            </small>
          </li>
          <% if logged_in? && current_user.admin? %>
            <li>
              <%= link_to "Delete this user", user_path(user), method: :delete,
              data: {confirm: "Are you sure you want to delete the user and all associated articles?"} %>
            </li>
          <% end %>
        </div>
      </ul>
      <% end %>
    </div>
  </div>
</div>
<hr />

<div align="center">
  <%= will_paginate %>
</div>
