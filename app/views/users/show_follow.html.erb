<div class="row">
  <aside class="col-md-4">
    <section class="user_info text-center">
      <%= gravatar_for @user %>
      <h1><%= link_to @user.name, @user %></h1>
      <%= @user.bio %>
      <div class="stats">
        <%= render 'shared/stats' %>
        <%= pluralize(@user.articles.count, "article") if @user.articles %>
      </div>
    </section>

    <% if @users.any? %>
      <div class="user-avatars">
        <% @users.each do |user| %>
          <%= link_to gravatar_for(user, size: 30), user %>
        <% end %>
      </div>
    <% end %>
  </aside>
  <div class="col-md-8">
    <h3>Editar isso</h3>
    <% if @users.any? %>
      <ul class="listing">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
